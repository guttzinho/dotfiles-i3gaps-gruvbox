vim:ft=kitty

# colors
foreground 		#ffffff
#background        #0d0d0d
background	        #16161e
selection_foreground #ffffff
selection_background #414868
background_opacity 0.7

cursor #c0caf5
cursor_text_color #1a1b26

url_color               #9ece6a

# Black
color0 #666c86
color8 #666c86

# Red
color1 #f43880
color9 #f43880

# Green
color2  #56dd66
color10 #56dd66

# Yellow
color3  #f4cd4b
color11 #f4cd4b

# Blue
color4  #5c8bf2
color12 #5c8bf2

# Magenta
color5  #9667ef
color13 #9667ef

# Cyan
color6  #50bdfc
color14 #50bdfc

# White
color7  #c0caf5
color15 #c0caf5

# fonts
font_family      Fira Code SemiBold Nerd Font Complete
bold_font        Fira Code Bold Nerd Font Complete
italic_font      Fira Code SemiBold Nerd Font Complete
bold_italic_font Fira Code Bold Nerd Font Complete
font_size 10.0
disable_ligatures cursor
adjust_baseline 1

# cursor things
cursor_shape beam
cursor_beam_thickness 1.5
cursor_blink_interval 1.0

# copy paste helper
copy_on_select yes
map ctrl+v paste_from_clipboard

# window layout
window_padding_width 4
placement_strategy center

# dont be fucking anoying
enable_audio_bell no
confirm_os_window_close 0

# use zsh
shell zsh
shell_integration enabled


